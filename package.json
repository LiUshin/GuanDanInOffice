{
  "name": "guandan",
  "version": "1.0.0",
  "main": "dist/server/index.js",
  "bin": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "ts-node src/server/index.ts",
    "build": "tsc && vite build",
    "start": "node dist/server/index.js",
    "package": "npm run build && pkg . --targets node18-win-x64 --output guandan-game.exe --public"
  },
  "pkg": {
    "assets": [
      "dist/client/**/*"
    ],
    "outputPath": "release"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "express": "^5.2.1",
    "mime-types": "^3.0.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "pkg": "^5.8.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  }
}
